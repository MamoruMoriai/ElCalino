<table>
  <tr>
    <th><%= form.label :category_id, "カテゴリーID" %></th>
    <td><%= form.collection_select :category_id,
            Category.where(id: 1..7), :id, :name %>
  </td>
  </tr>
  <tr>
    <th><%= form.label :genre_id, "ジャンルID" %></th>
    <td>
      <%= form.collection_select :genre_id,
          Genre.where(id: 1..6), :id, :name %>
    </td>
  </tr>
  <tr>
    <th><%= form.label :name, "料理名" %></th>
    <td><%= form.text_field :name %></td>
  </tr>
  <tr>
    <th><%= form.label :price, "値段" %></th>
    <td><%= form.number_field :price %></td>
  </tr>
  <tr>
    <th><%= form.label :image, "画像" %></th>
    <th><%= form.file_field :image %></th>
  </tr>
</table>
