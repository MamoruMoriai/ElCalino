<h1>FOOD</h1>

<p>
  <%= link_to "Blog", :blogs %>
  <%= link_to "Drink", :drinks %>
</p>
<p><%= link_to "メニューの追加", :new_food %></p>

<% if @foods.present? %>
<table class="list">
  <tr>
    <th>料理名</th>
    <th>値段</th>
  </tr>
  <% @foods.each do |food| %>
  <tr>
    <td><%= link_to food.name, food %></td>
    <td><%= food.price %></td>
    <td>
      <%= link_to "編集", [:edit, food] %> |
      <%= link_to "削除", food, method: :delete,
            data: { confirm: "本当に削除しますか？" } %>
    </td>
  </tr>
  <% end %>
</table>
<% else %>
<p>メニュー情報がありません。</p>
<% end %>
