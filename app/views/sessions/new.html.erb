<h3>Login</h3>

<div>
  <div>
    <%= form_for(:session, url: login_path) do |f| %>
      <tr>
        <th><%= f.label :name, "名前" %></th>
        <td><%= f.text_field :name %><td>
      </tr>
      <tr>
        <th><%= f.label :password, "パスワード" %></th>
        <td><%= f.password_field :password %></td>
      </tr>
      <%= f.submit "ログイン", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
